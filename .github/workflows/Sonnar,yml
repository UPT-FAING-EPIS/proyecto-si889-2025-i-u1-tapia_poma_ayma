name: Build

on:
  push:
    branches:
      - master
  pull_request:
    types: [opened, synchronize, reopened]

jobs:
  flutter_build:
    name: Flutter Build and SonarQube Scan
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0  # Desactiva el clon superficial para una mayor relevancia en el an치lisis

      # Instala Flutter
      - name: Set up Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.0.0'  # Especifica la versi칩n de Flutter que usas

      # Instala las dependencias de Flutter
      - name: Install dependencies
        run: flutter pub get

      # Realiza el an치lisis de SonarQube desde la carpeta 'proyecto'
      - name: SonarQube Scan
        uses: SonarSource/sonarqube-scan-action@v5
        with:
          working-directory: proyecto  # Cambia al directorio donde est치 el archivo sonar-project.properties
        env:
          SONAR_TOKEN: ${{ secrets.SONAR_TOKEN }}
